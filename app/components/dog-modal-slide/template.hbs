<div class="modal-content">
  <div class="modal-header">
    {{dog-carousel dog}}
  </div>
  <div class="modal-body">
    <h4 class="modal-title">{{dog.name}}</h4>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    {{dog.description}}
  </div>
  <div class="modal-footer">
    {{#if dog.inDoghouse}}
      <button {{action 'removeFromDoghouse' dog}} class="btn btn-warning">Sorry, I No Longer Want To Meet {{dog.name}}</button>
    {{else}}
      <button {{action 'addToDoghouse' dog}} class="btn btn-primary">I Want To Meet {{dog.name}}</button>
    {{/if}}
    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
  </div>
</div><!-- /.modal-content -->
